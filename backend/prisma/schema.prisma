generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id
  email     String @unique
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id          String   @id @default(cuid())
  title       String
  content     String
  thumbnail   String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}